{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "baseUrl": ".",
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Path */
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@runtime": [
        "wailsjs/runtime/runtime"
      ],
      "@main": [
        "wailsjs/go/main/App"
      ],

      "@riot": [
        "wailsjs/go/riot/Client"
      ]
    }
  },
  "include": [
    "src",
  ],
  "types": [
    "node"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
