{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Path */
  },
  "include": [
    "packages/main/**/*",
    "packages/updater/**/*",
    "packages/shared/**/*"
  ],
  "exclude": [
    "packages/site/**/*"
  ],

  "types": [
    "node"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
