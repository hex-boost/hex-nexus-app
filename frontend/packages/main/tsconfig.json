{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "baseUrl": "..",
    "paths": {
      "@/*": [
        "shared/src/*"
      ],

      "@shared": [
        "shared/"
      ],

      "@/hooks/*": [
        "main/src/hooks/*"
      ],
      "@/assets/*": [
        "main/src/assets/*"
      ],
      "@/stores/*": [
        "main/src/stores/*"
      ],
      "@/types/*": [
        "main/src/types/*"
      ],

      "@/contexts/*": [
        "main/src/contexts/*"
      ],
      "@app": [
        "main/bindings/github.com/hex-boost/hex-nexus-app/backend/app"
      ],

      "@riot": [
        "main/bindings/github.com/hex-boost/hex-nexus-app/backend/riot"
      ],
      "@discord": [
        "main/bindings/github.com/hex-boost/hex-nexus-app/backend/discord"
      ],
      "@league": [
        "main/bindings/github.com/hex-boost/hex-nexus-app/backend/league"
      ],
      "@repository": [
        "main/bindings/github.com/hex-boost/hex-nexus-app/backend/repository"
      ],
      "@updater": [
        "main/bindings/github.com/hex-boost/hex-nexus-app/backend/updater"
      ],

      "@events": [
        "main/bindings/github.com/hex-boost/hex-nexus-app/backend/events"
      ],
      "@utils": [
        "main/bindings/github.com/hex-boost/hex-nexus-app/backend/utils"
      ],

      "@stripe": [
        "main/bindings/github.com/hex-boost/hex-nexus-app/backend/stripe"
      ],
      "@overlay": [
        "main/bindings/github.com/hex-boost/hex-nexus-app/backend/overlay"
      ]

    }
  },
  "include": ["src"],
}